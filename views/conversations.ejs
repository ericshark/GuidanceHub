<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Conversations - GuidanceHub</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="content-wrapper">
      <!-- Navigation -->
      <%- include('partials/nav') %>

      <!-- Conversations Section -->
      <section class="contact">
        <div class="content-container">
          <h1>Your Previous Conversations</h1>
          
          <% if (feedback.length > 0) { %>
            <div class="conversations-container">
              <% feedback.forEach(item => { %>
                <div class="conversation-card">
                  <h3 class="conversation-title">Advice Session</h3>
                  <div class="conversation-date"><%= item.timestamp.toLocaleString() %></div>
                  <div class="conversation-snippet"><%= item.feedback %></div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="empty-state">
              <p class="no-conversations">No conversations found. Start by getting advice!</p>
              <a href="/begin" class="submit-btn">Begin New Conversation</a>
            </div>
          <% } %>
        </div>
      </section>
    </div>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 GuidanceHub. All rights reserved.</p>
    </footer>
  </body>
</html>